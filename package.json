{
  "name": "@victoriabros/opq",
  "version": "1.2.0",
  "description": "Node.js client library for constructing OpenSearch query",
  "main": "index.js",
  "directories": {
    "doc": "docs",
    "example": "examples",
    "lib": "lib",
    "test": "tests"
  },
  "scripts": {
    "pretest": "npm run lint",
    "test": "NODE_ENV=test jest --runInBand",
    "lint": "eslint --ext js ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VictoriaBros/opq-js.git"
  },
  "author": "Victoria Bros. <technology@victoriabros.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/VictoriaBros/opq-js/issues"
  },
  "homepage": "https://github.com/VictoriaBros/opq-js#readme",
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "@opensearch-project/opensearch": "^2.13.0",
    "debug": "^4.4.3"
  },
  "keywords": [
    "opensearch",
    "opensearch-js",
    "index",
    "search",
    "match",
    "multimatch",
    "elasticsearch",
    "opq",
    "opq-js"
  ],
  "devDependencies": {
    "eslint": "^8.57.1",
    "jest": "^29.7.0"
  },
  "jest": {
    "verbose": true,
    "bail": true,
    "displayName": "opq",
    "testEnvironment": "node",
    "coverageDirectory": ".coverage",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/lib/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
